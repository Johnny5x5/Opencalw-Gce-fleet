#!/usr/bin/env node

const SovereignCalendar = require('../packages/sovereign-time/src/calendar');

const calendar = new SovereignCalendar();
const status = calendar.getStatus();

console.log(`
=== THE SOVEREIGN CALENDAR (DUAL STACK) ===
Gregorian Date: ${status.gregorian_date}
Hebrew Year:    ${status.hebrew_year} (Approx)
Sovereign Year: ${status.sovereign_year}

[SHEMITAH CYCLE - 7 YEARS]
Current Year:   ${status.shemitah.current_year_in_cycle} of 7
Status:         ${status.shemitah.status}
Years to Release: ${status.shemitah.years_remaining}

[JUBILEE CYCLE - 50 YEARS]
Current Year:   ${status.jubilee.current_year_in_cycle} of 50
Status:         ${status.jubilee.status}
Years to Reset:   ${status.jubilee.years_remaining}
===========================================
`);
