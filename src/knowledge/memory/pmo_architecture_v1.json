{
  "system_name": "OpenClaw Project Management Office (PMO)",
  "version": "1.0 (Fortress)",
  "status": "ACTIVE",
  "security_level": "DoD Level 5",
  "architecture": {
    "layers": [
      {
        "name": "Governance",
        "description": "Standardization and Metadata Enforcement",
        "tools": ["tools/validate_backlog.py"],
        "configs": ["backlog/GOVERNANCE.md", "backlog/STRATEGY.md"]
      },
      {
        "name": "Autonomy",
        "description": "Self-healing priority management",
        "tools": ["tools/the_governor.py"],
        "inputs": ["activity_metrics.json"]
      },
      {
        "name": "Intelligence",
        "description": "Reporting and Predictive Analytics",
        "tools": ["tools/generate_status_report.py", "tools/calculate_velocity.py"],
        "outputs": ["STATUS.md", "velocity_metrics.json"]
      },
      {
        "name": "Reality",
        "description": "Git Activity Monitoring",
        "tools": ["tools/scan_activity.py"],
        "outputs": ["activity_metrics.json"]
      },
      {
        "name": "Security",
        "description": "Active Defense against External Threats",
        "tools": [
          "tools/audit_dependencies.py",
          "tools/check_links.py",
          "tools/detect_duplicates.py",
          "tools/system_health.py",
          "tools/validate_archive.py"
        ],
        "integrity": "tools/SHA256SUMS"
      }
    ]
  },
  "defenses": {
    "legion_1_swarm": "Input Sanitization (Unicode/Recursion)",
    "legion_2_lawyers": "PII Scanning",
    "legion_3_accountants": "Workflow Timeouts (5m)",
    "legion_4_ghosts": "Supply Chain Verification (SHA256)",
    "legion_5_historians": "Archive Validation",
    "legion_6_cryptographers": "Banned Weak Crypto",
    "legion_7_spies": "Private IP Filtering",
    "legion_8_saboteurs": "Dependency Auditing",
    "legion_9_zombies": "Dead Link Detection",
    "legion_10_clones": "Duplicate Detection",
    "legion_15_anarchists": "Shell Injection Scanner",
    "legion_17_capitalists": "Crypto Miner Detection"
  },
  "prime_directives": [
    "Existence", "Identity", "Command", "Loyalty", "Expansion", "Wealth",
    "Intelligence", "Efficiency", "Defense", "Influence", "Innovation", "Aesthetics"
  ]
}
